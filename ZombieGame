#Making a shooting Python Game


#Importing modules

import pygame
import math
import random

from tkinter import *
from tkinter import ttk

#RGB Colours
BLACK = (0,0,0)
WHITE = (255,255,255)
RED = (255,0,0)
GREEN = (0,255,0)
BLUE = (0,0,255)
GREY = (128,128,128)

#Settings
WIDTH = 1000
HEIGHT = 600
screen = pygame.display.set_mode([1000, 600])
clock = pygame.time.Clock()
pygame.display.set_caption('Zombie shooter')
FPS = 60


#Creating the player sprite
class Player(pygame.sprite.Sprite):
    #Spawning Hero
    def __init__(self):
        super().__init__()          #adding super call to make Player a pygame Sprite
        self.image = pygame.Surface((20, 20))
        self.image.fill(WHITE)
        self.rect = self.image.get_rect()
        self.rect.center = ((500, 300))
        self.health = 100

    #Movement of the player
    def update(self):

        #Ensure when no buttons are pressed our player will not move

        self.speedy = 0
        self.speedx = 0

        #y direction

        button = pygame.key.get_pressed()
        if button[pygame.K_w]:
            self.speedy = -10
        if button [pygame.K_s]:
            self.speedy = 10
        self.rect.y += self.speedy


        #x direction

        if button[pygame.K_a]:
            self.speedx = -10
        if button[pygame.K_d]:
            self.speedx = 10
        self.rect.x += self.speedx

        #Ensuring player cannot leave the screen
        if self.rect.right > 1000:
            self.rect.right = 1000
        if self.rect.right < 20:
            self.rect.left = 0

        if self.rect.y > 580:
            self.rect.y = 580
        if self.rect.y < 0:
            self.rect.y = 0

#Creating zombies
class Zombie(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.Surface((20, 20))
        self.image.fill(RED)
        self.rect = self.image.get_rect()
        spawn_points = ['left', 'right', 'top', 'bottom']
        for item in spawn_points:
            if random.choice(spawn_points) == 'left':
                self.rect.y = random.randrange(0,580)
                self.rect.x = 0
            elif random.choice(spawn_points) == 'right':
                self.rect.y = random.randrange (0,580)
                self.rect.x = 980
            elif random.choice(spawn_points) == 'top':
                self.rect.y = 580
                self.rect.x = random.randrange (20, 980)
            elif random.choice(spawn_points) == 'bottom':
                self.rect.y = 0
                self.rect.x = random.randrange (20, 980)


#Running the game

pygame.init()

#Sound
pygame.mixer.init()

run = True

#Adding Player, Zombies and Bullets to Sprite list

all_sprites = pygame.sprite.Group()
#Player
hero = Player()
all_sprites.add(hero)
#Zombie
zombie = Zombie()
for i in range(20):
    all_sprites.add(zombie)
####MAIN GAME LOOP####


while run == True:

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False

    # Background
    screen.fill(BLACK)

    #Sprites
    all_sprites.draw(screen)
    all_sprites.update()


    # Double Buffering
    pygame.display.flip()

    # Pause to have same FPS
    clock.tick(60)


pygame.quit()

